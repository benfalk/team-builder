- total_wins = 0
- total_kills = 0
- totalTurretsKilled = 0
- totalAssists = 0
- days = ((current_user.summoner.level * 413.42)/60)/24
- hours = (24*(days - days.to_i))
- minutes = (60*(hours - hours.to_i))

- current_user.summoner.stats_summary.raw.each do |type|
  - if type['playerStatSummaryType'] != 'CoopVsAI'
    - total_wins += type['wins'].to_i
    - total_kills += type['aggregatedStats']['totalChampionKills'].to_i
    - totalTurretsKilled += type['aggregatedStats']['totalTurretsKilled'].to_i
    - totalAssists += type['aggregatedStats']['totalAssists'].to_i



.container.page-top-pad
  .page-top-pad
    .row.dark-bg
      .col-lg-9
        .row.pad
          .col-lg-2
            .profile-pic-square-with-pic
              = image_tag  current_user.avatar_url
          .col-lg-10.overview-user-info

            .row
              .col-lg-4
                %h2
                  = current_user.summoner.name
              .col-lg-1{style:'padding-top:12px;'}
                HEAT:
              .col-lg-7{style:'padding-top:10px;'}
                .progress{style:'background-color:#46525E; height:16px;'}
                  .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "80", role: "progressbar", style: "width: 80%"}
                    %span.sr-only 80% Complete

            .row
              .col-lg-4
                %strong
                  = current_user.first_name
                  = current_user.last_name
                %br
                %i.fa.fa-map-marker
                = current_user.location_city
                = current_user.location_state
                %br
                Play Style:
                = current_user.play_style

              .col-lg-4

                Region:&nbsp;&nbsp;
                = current_user.summoner.region
                %br
                Level:&nbsp;&nbsp;
                = current_user.summoner.level
                %br
                KDA:&nbsp;&nbsp;
                00

              .col-lg-3
                Wins:&nbsp;&nbsp;
                = total_wins
                %br
                Total Kills:&nbsp;&nbsp;
                = total_kills
                %br
                Total Assists:&nbsp;&nbsp;
                = totalAssists

        .row.pad{style:'padding-top:0; height:101px;overflow: scroll;'}
          .col-lg-7
            %p.bio
              = current_user.short_bio.html_safe
          .col-lg-5.champ-list-short
            = image_tag 'http://ddragon.leagueoflegends.com/cdn/4.5.4/img/champion/Heimerdinger.png'
            = image_tag 'http://ddragon.leagueoflegends.com/cdn/4.5.4/img/champion/Heimerdinger.png'
            = image_tag 'http://ddragon.leagueoflegends.com/cdn/4.5.4/img/champion/Heimerdinger.png'
            = image_tag 'http://ddragon.leagueoflegends.com/cdn/4.5.4/img/champion/Heimerdinger.png'

      .col-lg-3.right-Well
        %canvas#canvas{:height => "250", :width => "250", style:'margin-left: -16px;'}

  .page-top-pad
    .row
      .col-lg-3
        .team-titles{style:'overflow:hidden'}
          %h4.pull-left Teams
          %a.btn.pull-right  Create
          %a.btn.pull-right  Join

        .list-group
          - current_user.teams.each do |t|
            = link_to t.name, team_path(t), class:'list-group-item'


        %h4 Teammate Activity
        %hr
        No teammates yet, Join or create a team.

      .col-lg-9
        %legend
          Your Match History
        - @hash = [1,2,3,4,5]
        - @hash.each do |k, v|
          = render 'match'

        :javascript
          $('.has-tooltip').tooltip()


        .row
          .col-lg-12
            .load-more
              %a Load More


    %br
    %br
    %br
    = debug current_user
    = debug current_user.summoner
    = debug current_user.summoner.stats_summary.raw

