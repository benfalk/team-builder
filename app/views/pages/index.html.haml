.container
  .mast-head
    .mast-title Ready to team up?
    .mast-sub-title Easily join or Create your League of Legends team.
    .summoner-enter

      = form_for @summoner, html: {class:'form-inline summoner-init'} do |f|
        = f.text_field :name, class:'summoner-name', placeholder:'Enter Summoner Name'
        .summoner-region-wrap
          = f.select :region, options_for_select([['NA', 'NA'], ['EUW', 'EUW']])
        :javascript
          $("#summoner_region").customSelect()

        = f.submit 'Enter', class:'btn btn-primary summoner-submit'

      .small-text
        By clicking enter you are agreeing to the
        %a{:href => "#terms"} terms
    .member-numbers 321,943 members and growing





