.container.page-top-pad
  .row.page-top-pad
    .col-lg-3
      - unless @team.avatar_url.blank?
        .team-avatar{style:"background-image:url(#{@team.avatar_url})"}

      %legend Team Comm
      - participants = ['echo123','benjamin.falk','changingworld358']
      %a.skype-button{:href => "skype:#{participants.join(';')}?call&topic=Team%20Call", title:" Conference: #{participants.join(', ')}", 'data-placement'=>"top"}
        = image_tag 'skype.png'
        Start Group Call
      :javascript
        $('.skype-button').tooltip()

      %hr

      = form_for(@team.stream.notifications.build, url: team_notifications_path(@team), html:{class: 'form-inline'}) do |f|
        .form-group
          = f.text_field :message, class: 'form-control', placeholder: 'Message'
          = f.submit 'Post', class: 'btn btn-default chat-post'
      -#%form.form-inline{role: 'form'}
        -#.form-group
          -#%input.form-control{placeholder: 'Message', type: 'text'}
        -#%button.btn.btn-default.chat-post{type: 'submit'} Post
      - @team.stream.notifications.order(created_at: :desc).each do |msg|
        .activity
          .note
            .from
              = msg.from
            .message
              = msg.message

    .col-lg-9
      %legend
        = link_to 'Add Summoner', new_team_membership_path(@team), class: 'btn pull-right'
        = link_to 'Edit', edit_team_path(@team), class:'btn pull-right'

        = @team.name.upcase

      %table.table.team-table
        %thead
          %tr
            %th Team Roster
            %th Name
            %th Location
            %th
            %th KDA
            %th Role
            %th GOLD/MINUTE
        %tbody
          - team_ids = []
          - @team.team_memberships.each do |tm|
            - team_ids.push(tm.summoner_id)
            %tr
              %td 
                = tm.summoner.name.capitalize
              %td 
                = tm.user.try(:full_name)
              %td 
                = tm.user.try(:location)
              %td 
                = tm.membership_type
              %td 2
              %td 
                = tm.role.try(:name)
              %td{style:'width:150px'}
                .progress.has-tooltip{title:'Overall Gold per minute'}
                  .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '80', role: 'progressbar', style: 'width: 80%'}
                    %span.sr-only 80% Complete


      .row
        .col-lg-12
          %legend
            Gold Per Minute
          = render 'gold_chart'


      %br
      %br
      %legend
        Match History
      - cache([@team, @team_games.first]) do
        = render partial: 'match', collection: @team_games, as: :match, locals:{team_ids: team_ids}





  %br
  %br
  %br




:javascript
  $('.has-tooltip').tooltip()
  $('.numeral').each(function(){
    $(this).text(numeral($(this).text()).format('0.0a'))
  })











