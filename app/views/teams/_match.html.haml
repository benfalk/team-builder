.match
  .row.well{style:'margin:2px; padding:15px 0'}
    .col-lg-2
      -#= image_tag 'http://ddragon.leagueoflegends.com/cdn/4.5.4/img/champion/Heimerdinger.png', class:'champ'
    .col-lg-3{style:'text-align:left; color:#d9534f; padding-top:8px;'}
      %strong LOSE
    .col-lg-3{style:'text-align:center; padding-top:8px;'} 
    .col-lg-4{style:'text-align:right; padding-top:8px;'}
      = match.played_at.strftime('%a, %b %-d | %l:%M%p')

  %table.table.matches
    %thead
      %tr
        %th SUMMONER
        %th SPELLS
        %th KDA
        %th ITEMS
        %th FARM
        %th CREEPS
        %th WARDS
        %th DAMAGE
        %th ROLE
    %tbody
      - match.top_team.each do |p|

        -#= debug p['stats'].raw['spell1'] if p['stats']

        %tr{class:"#{ 'friend' if team_ids.include? p['summoner'].id }"}
          %td
            %i.fa.fa-user
            = p['summoner'].name
          %td
            - ['spell1','spell2'].each do |i|
              - if p['stats']
                - unless p['stats'].raw['stats'][i].blank?
                  %img{src:"http://lkimg.zamimg.com/images/spells/#{ p['stats'].raw[i] if p['stats'] }.png", style:'width:15px'}
                - else
                  .empty-item
              - else
                .empty-item
          %td
            = p['stats'].raw['stats']['item0'] if p['stats']
          %td
            - ['item0','item1','item2','item3','item4','item5','item6'].each do |i|
              - if p['stats']
                - unless p['stats'].raw['stats'][i].blank?
                  %img{src:"http://lkimg.zamimg.com/shared/riot/images/items/#{p['stats'].raw['stats'][i] if p['stats']}_32.png", style:'width:15px'}
                - else
                  .empty-item
              - else
                .empty-item
          %td 9k
          %td 72
          %td 00
          %td 9.5k
          %td{style:'width:200px'}
            .progress
              .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '80', role: 'progressbar', style: 'width: 80%'}
                %span.sr-only 80% Complete
          %td

          %td



      %tr
        %td{colspan:'10', style:'text-align:center'}
          %hr

      - match.bottom_team.each do |p|
        %tr{class:"#{ 'friend' if team_ids.include? p['summoner'].id }"}
          %td
            %i.fa.fa-user
            = p['summoner'].name
          %td
            - ['spell1','spell2'].each do |i|
              - if p['stats']
                - unless p['stats'].raw['stats'][i].blank?
                  %img{src:"http://lkimg.zamimg.com/images/spells/#{ p['stats'].raw[i] if p['stats'] }.png", style:'width:15px'}
                - else
                  .empty-item
              - else
                .empty-item
          %td
            = p['stats'].raw['stats']['item0'] if p['stats']
          %td
            - ['item0','item1','item2','item3','item4','item5','item6'].each do |i|
              - if p['stats']
                - unless p['stats'].raw['stats'][i].blank?
                  %img{src:"http://lkimg.zamimg.com/shared/riot/images/items/#{p['stats'].raw['stats'][i] if p['stats']}_32.png", style:'width:15px'}
                - else
                  .empty-item
              - else
                .empty-item
          %td 9k
          %td 72
          %td 00
          %td 9.5k
          %td{style:'width:200px'}
            .progress
              .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '80', role: 'progressbar', style: 'width: 80%'}
                %span.sr-only 80% Complete
          %td
            %i.fa.fa-plus.has-tooltip{style:'color:#5cb85c', 'data-placement' => 'top', 'data-toggle' => 'tooltip', title: 'Request Comrade'}
          %td
            %i.fa.fa-minus-circle.has-tooltip{style:'color:#d9534f', 'data-placement' => 'top', 'data-toggle' => 'tooltip', title: 'Mark Foe'}


  .row
    .col-lg-4
      .lolr
        = image_tag 'lolr.png', style:'width:130px'
        %br
        %i.fa.fa-arrow-up
        Upload lolreplay for archives.

    .col-lg-8
      Game Notes:
      %textarea{style:'width:100%; height:111px; background-color: #4E6274; color:#fff; padding: 3px 6px;'}
      .btn.btn-primary.pull-right Save
  .row
    .col-lg-12
