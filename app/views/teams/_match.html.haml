.match
  .row.well{style:'margin:2px; padding:15px 0'}
    .col-lg-6
      %span{style:"color:#5CB85C"}
        WIN
      &nbsp;&nbsp;&nbsp;
      Summoners Rift
    .col-lg-6{style:'text-align:right;'}
      = match.played_at.strftime('%a, %b %-d | %l:%M%p')
  -#= debug match
  %table.table.matches
    %thead
      %tr
        %th SUMMONER
        %th SPELLS
        %th KDA
        %th ITEMS
        %th FARM
        %th CREEPS
        %th WARDS
        %th DAMAGE
        %th GOLD/MIN
    %tbody
      - match.top_team.each do |p|
        %tr{class:"#{ 'friend' if team_ids.include? p['summoner'].id }"}
          %td
            %i.fa.fa-user
            = p['summoner'].name

          - if p['stats']
            - raw = p['stats'].raw
            - raws = raw['stats']
            %td
              - ['spell1','spell2'].each do |i|
                - unless raw[i].blank?
                  %img{src:"http://lkimg.zamimg.com/images/spells/#{ raw[i] }.png", style:'width:24px'}
                - else
                  .empty-item
            %td
              = "#{raws['championsKilled']}/#{raws['numDeaths']}/#{raws['assists']}"
            %td
              - ['item0','item1','item2','item3','item4','item5','item6'].each do |i|

                - unless raws[i].blank?
                  %img{src:"http://lkimg.zamimg.com/shared/riot/images/items/#{raws[i]}_32.png"}
                - else
                  .empty-item
            %td
              = raws['goldEarned']
            %td
              = raws['minionsKilled']
            %td
              = raws['wardPlaced']
            %td
              = raws['totalDamageDealt']
            %td
              .progress
                .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '80', role: 'progressbar', style: 'width: 80%'}
                  %span.sr-only 80% Complete
          - else
            %td.no-data{colspan:'9'}
              No Data for this summoner
          -#%td
          -#
          -#%td



      %tr
        %td{colspan:'10', style:'text-align:center'}
          %hr

      - match.bottom_team.each do |p|

        = debug p
        %tr{class:"#{ 'friend' if team_ids.include? p['summoner'].id }"}
          %td
            %i.fa.fa-user
            = p['summoner'].name

          - if p['stats']
            - raw = p['stats'].raw
            - raws = raw['stats']
            %td
              - ['spell1','spell2'].each do |i|
                - unless raw[i].blank?
                  %img{src:"http://lkimg.zamimg.com/images/spells/#{ raw[i] }.png", style:'width:24px'}
                - else
                  .empty-item
            %td
              = "#{raws['championsKilled']}/#{raws['numDeaths']}/#{raws['assists']}"
            %td
              - ['item0','item1','item2','item3','item4','item5','item6'].each do |i|

                - unless raws[i].blank?
                  %img{src:"http://lkimg.zamimg.com/shared/riot/images/items/#{raws[i]}_32.png"}
                - else
                  .empty-item
            %td
              = raws['goldEarned']
            %td
              = raws['minionsKilled']
            %td
              = raws['wardPlaced']
            %td
              = raws['totalDamageDealt']
            %td
              .progress
                .progress-bar.progress-bar-success{'aria-valuemax' => '100', 'aria-valuemin' => '0', 'aria-valuenow' => '80', role: 'progressbar', style: 'width: 80%'}
                  %span.sr-only 80% Complete
          - else
            %td.no-data{colspan:'9'}
              No Data for this summoner
          -#%td
          -#  %i.fa.fa-plus.has-tooltip{style:'color:#5cb85c', 'data-placement' => 'top', 'data-toggle' => 'tooltip', title: 'Request Comrade'}
          -#%td
          -#  %i.fa.fa-minus-circle.has-tooltip{style:'color:#d9534f', 'data-placement' => 'top', 'data-toggle' => 'tooltip', title: 'Mark Foe'}


  .row
    .col-lg-4
      .lolr
        = image_tag 'lolr.png', style:'width:130px'
        %br
        %i.fa.fa-arrow-up
        Upload lolreplay for archives.

    .col-lg-8
      Game Notes:
      %textarea{style:'width:100%; height:111px; background-color: #4E6274; color:#fff; padding: 3px 6px;'}
      .btn.btn-primary.pull-right Save
  .row
    .col-lg-12
