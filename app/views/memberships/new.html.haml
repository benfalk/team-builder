      = render partial: 'request', collection: @team.requests.undecided.includes({user:[:summoner]}).to_a, as: :request

  %legend Recently played with
  %table.table.team-builder-table.table-hover
    %thead
      %tr
        %th CANDIDATES
        %th LOCATION
        %th Level
        %th ROLE
        %th KDA
        %th STYLE
        %th Times
        %th CHAMPS
        %th
    %tbody
      = render partial: 'invite', collection: [], as: :user

  %legend Candidates
  %table.table.team-builder-table.table-hover
    %thead
      %tr
        %th CANDIDATES
        %th LOCATION
        %th Level
        %th ROLE
        %th KDA
        %th STYLE
        %th Times
        %th CHAMPS
        %th
    %tbody
      = render partial: 'invite', collection: @canidates, as: :user
