.container.page-top-pad
  .page-header
    .row
      .col-lg-5
        %h2
          = @team.name
          Roster
      .col-lg-7
        = render partial: 'memberships/form'





  = render partial:'teams/team_memberships', locals:{team:@team, edit:true}








  %br
  %br
