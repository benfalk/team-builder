  %legend Except Requests
  %table.table.team-builder-table.table-hover
    %thead
      %tr
        %th CANDIDATES
        %th LOCATION
        %th Level
        %th ROLE
        %th KDA
        %th STYLE
        %th Times
        %th CHAMPS
        %th
