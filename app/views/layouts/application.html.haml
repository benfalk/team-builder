%html
  %head
    %title lolFACTION
    = favicon_link_tag '/favicon.png'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    - flash.each do |key, value|
      :javascript
        // {notice:'success', alert:'warning', error:'error'}
        var flash = {notice:'success', alert:'success', error:'error'}
        toastr[flash.#{key}]("#{value}")

    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{:href => "../"} lol FACTION
          %button.navbar-toggle{"data-target" => "#navbar-main", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %ul.nav.navbar-nav.pull-right
          - if current_user.present?
            %li
              = link_to 'Overview', overview_account_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Teams
                %b.caret
              %ul.dropdown-menu
                - current_user.teams.each do |t|
                  %li
                    = link_to t.name, team_path(t)

                %li.divider
                %li
                  = link_to new_team_path do
                    %i.fa.fa-plus
                    &nbsp;Create Team

                %li
                  = link_to teams_path do
                    %i.fa.fa-users
                    &nbsp; Join Team


          - if current_user.present?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Profile', edit_account_path
                %li
                  = link_to 'Edit Email/Password', edit_user_registration_path
                %li
                  = link_to 'Logout', destroy_user_session_path, :method => :delete

          - else
            %li
              = link_to 'Login', new_user_session_path


        #navbar-main.navbar-collapse.collapse
          -#%ul.nav.navbar-nav
          -#  %li
          -#    %a{:href => "../help/"} Help
          -#%button.btn.btn-primary.navbar-right{:type => "button", style:'height: 39px;margin-top: 1px;', :onclick => "document.getElementById('loginForm').submit();"} Login
          -#= form_for resource, as: resource_name, url: session_path(resource_name), html:{class:' navbar-form navbar-right'} do |f|
          -#  = f.email_field :email, autofocus: true
          -#  = f.password_field :password, autocomplete: "off", :placeholder => "Password", style: 'background: #919BA3;color:#fff;'

    = yield

