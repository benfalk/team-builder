!!!
%html
  %head
    %title lolFACTION - Team management for league of legends
    = favicon_link_tag '/favicon.png'
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    - flash.each do |key, value|
      :javascript
        // {notice:'success', alert:'warning', error:'error'}
        var flash = {notice:'success', alert:'success', error:'error'}
        toastr[flash.#{key}]("#{value}")

    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %a.navbar-brand{:href => "../"} lol FACTION
          %button.navbar-toggle{"data-target" => "#navbar-main", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        %ul.nav.navbar-nav.pull-right
          - if current_user.present?
            %li
              = link_to 'Overview', overview_account_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Teams
                %b.caret
              %ul.dropdown-menu
                - current_user.teams.each do |t|
                  %li
                    = link_to t.name, team_path(t)

                %li.divider
                %li
                  = link_to new_team_path do
                    %i.fa.fa-plus
                    &nbsp;Create Team

                %li
                  = link_to teams_path do
                    %i.fa.fa-users
                    &nbsp; Join Team


          - if current_user.present?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Account
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Profile', edit_account_path
                %li
                  = link_to 'Edit Email/Password', edit_user_registration_path
                %li
                  = link_to 'Logout', destroy_user_session_path, :method => :delete

          - else
            %li
              = link_to 'Login', new_user_session_path




    = yield

    %footer
      .container
        %p.pull-right.riot-text
          This product is not endorsed, certified or otherwise approved in any way by Riot Games, Inc. or any of its affiliates.
        %p
          © 2014 LOL Faction - Amateur league Of Legends Teams
          %a{:href => "#"} Privacy
          ·
          %a{:href => "#"} Terms

    - if Rails.env.production?
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-51498388-1', 'lolfaction.com');
        ga('send', 'pageview');


    :css
      @import url('http://getbarometer.s3.amazonaws.com/assets/barometer/css/barometer.css');
    %script{:src => "http://getbarometer.s3.amazonaws.com/assets/barometer/javascripts/barometer.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :type => "text/javascript"}
